<form class="container" action="/update/store" method="POST">
    <h1 class="text-center">Store Details</h1>
    <input type="hidden" name="id" value="{{store._id}}">
    <div class="form-row">
        <div class="col-md-12 mb-3">
            <label for="name">Store name: </label>
            <input type="text" class="form-control" id="name" name="name" value="{{store.name}}">
        </div>
    </div>

    <div class="form-row">
        <div class="col-md-12 mb-3">
            <label for="email">Email: </label>
            <input type="text" class="form-control" id="email" name="email" value="{{store.email}}">
        </div>
    </div>

    <div class="form-row">
        <div class="col-md-12 mb-3">
            <label for="des">Description: </label>
            <input type="text" class="form-control" id="des" name="des" value="{{store.des}}">
        </div>
    </div>

    <div class="form-row">
        <div class="col-md-12 mb-3">
            <label for="tags">Tags: </label>
            <br>
            Business<input type="checkbox" class="form-control" id="tags" name="tags" value="Business">
            Marketing<input type="checkbox" class="form-control" id="tags" name="tags" value="Marketing">
            Freelancer<input type="checkbox" class="form-control" id="tags" name="tags" value="Freelancer">
        </div>
    </div>

    <div class="form-group">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
            <label class="form-check-label" for="invalidCheck">
                Agree to terms and conditions
            </label>
        </div>
    </div>
    <a href="/" class="btn btn-primary" type="submit">Go Back</a>
    <button class="btn btn-primary" type="submit">Update form</button>
</form>